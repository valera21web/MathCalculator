<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
   <item android:state_pressed="true">
      <shape>
         <gradient android:angle="90.0"
                   android:startColor="@color/backgroundColorButtonHistoryClearPressEnd"
                   android:endColor="@color/backgroundColorButtonHistoryClearPressStart"
                   android:type="linear" />
         <corners android:radius="10dp" />
      </shape>
   </item>
   <item>
      <shape>
         <gradient
                 android:angle="90.0"
                 android:startColor="@color/backgroundColorButtonHistoryClearStart"
                 android:endColor="@color/backgroundColorButtonHistoryClearEnd"
                 android:type="linear" />
         <corners android:radius="0dp" />
      </shape>
   </item>
</selector>